<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".osszeredmeny">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/szoveg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="30dp"

            android:background="@color/teal_200"
            android:backgroundTintMode="add"
            android:text="Tábla felismeréből a legjobb eredmény: "

            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/elért"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:background="@color/teal_200"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/szoveg"
            app:layout_constraintStart_toEndOf="@+id/szoveg"
            app:layout_constraintTop_toTopOf="@+id/szoveg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:background="@color/teal_200"
            android:text="/30"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/szoveg"
            app:layout_constraintStart_toEndOf="@+id/elért"
            app:layout_constraintTop_toTopOf="@+id/szoveg" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>